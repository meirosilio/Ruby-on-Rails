
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 my-3">
    <legend>Update a Kitten Record <%= @kitten.id %></legend>

    <%= form_for(@kitten) do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :age %>
          <%= f.select :age, options_for_select(1..20,selected = @kitten.age), {}, class:'form-control', selected:@kitten.age %>
        </div>

        <div class="form-group">
          <%= f.label :cuteness %>
          <%= f.select :cuteness,options_for_select(1..5, selected = @kitten.cuteness),{}, class:'form-control'%>
        </div>

        <div class="form-group">
          <%= f.label :softness %>
          <%= f.select :softness,options_for_select(1..5, selected = @kitten.softness),{}, class:'form-control' %>
        </div>

        <%= f.submit 'Update Record', class:'btn btn-primary btn-block' %>
    <% end %>

  </div>
</div>