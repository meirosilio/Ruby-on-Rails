
<div class="row">
  <div class="col-md-4 mx-3"></div>
  <div class="col-md-4 ml-5 my-3"><h1>Meet our community</h1></div>
</div>


<div class="container my-0">

  <table class="table table-striped table-hover ">

    <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th># of attended events</th>
      <th># of hosted events</th>
      <th>Action</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td> <%= user.full_name %> </td>
          <td> <%= user.email %> </td>
          <td> Attend to <%= user.number_of_attended_events %> events </td>
          <td> Hosting <%= user.number_of_hosted_events %> events</td>
          <td> <%= link_to "Event List", user_path(user) %>  </td>
        </tr>
    <% end %>


    </tbody>
  </table>

</div>