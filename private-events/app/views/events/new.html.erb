
<div class="row">
  <div class="col-md-5"></div>
  <div class="col-md-3 my-3 "><h1>Create New Event</h1></div>
</div>


<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_for(@event) do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :location %>
        <%= f.text_field :location %>

        <%= f.label :date %>
        <%= f.date_field :date %>

        <%= f.label :description %>
        <%= f.text_area :description %>

        <%= f.submit "Create New Event", class:"btn btn-lg my-3"%>


    <% end %>

  </div>

</div>


