<header>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "Club House", root_path, class:"navbar-brand"%>
      </div>

      <ul class="nav navbar-nav-right">

        <li class="active"> <%= link_to "Posts", posts_path, class: "navbar-links" %> </li>
        <% unless !signed_in? %>
            <li class="active"> <%= link_to "New Post", new_post_path, class: "navbar-links" %> </li>
      <% end %>



        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Account<span class="caret"></span></a>
          <ul class="dropdown-menu">

            <% unless signed_in? %>
                <%= link_to "Sign In", signin_path, class:"navbar-links"%>
                <hr>
                <%= link_to "Register", registration_path, class:"navbar-links"%>
            <% else %>
                <%= link_to "Sign Out", signout_path, class:"navbar-links", method: :delete%>
            <% end %>
          </ul>
        </li>

      </ul>
    </div>
  </nav>
</header>