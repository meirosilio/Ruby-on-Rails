<div class="row">
  <div class="col-md-6 offset-md-3">

    <%= bootstrap_form_for(@user,url:registration_path) do |f| %>

        <%= f.text_field :name %>
        <%= f.email_field :email %>
        <%= f.password_field :password %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit "Create Account", class:"btn btn-lg"%>

    <% end  %>
  </div>
</div>